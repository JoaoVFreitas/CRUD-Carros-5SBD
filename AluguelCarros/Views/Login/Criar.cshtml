@using AluguelCarros.Enums;
@model ClienteModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastro";
}

<div class="text-center">
    <h1>Cadastro</h1>
</div>

<form asp-controller="Login" asp-action="Criar" method="post">
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o seu nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o seu e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="perfil">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Padrão">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>
    <div class="mb-3">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a sua senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <div class="d-grid gap-2 col-5 mx-auto">
        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index">Voltar</a>
    </div>
</form>