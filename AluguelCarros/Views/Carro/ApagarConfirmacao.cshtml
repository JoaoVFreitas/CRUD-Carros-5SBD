@model CarroModel
@{
    ViewData["Title"] = "Confirmação de Exclusão do Carro";
}

<div class="text-center">
    <h3>Realmente deseja apagar o carro (@Model.Placa)?</h3>
</div>

<div class="d-grid gap-2 col-5 mx-auto">
    <a class="btn btn-primary" role="button" asp-controller="Carro" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger" role="button" asp-controller="Carro" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>